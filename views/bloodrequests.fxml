<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.BloodRequestFXMLController">
    <children>
        <!-- Table for displaying blood request data -->
        <TableView fx:id="bloodRequestTable" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="760.0" visible="false">
            <columns>
                <TableColumn fx:id="requestIDCol" text="Request ID"/>
                <TableColumn fx:id="bloodTypeCol" text="Blood Type"/>
                <TableColumn fx:id="quantityCol" text="Quantity"/>
                <TableColumn fx:id="hospitalIDCol" text="Hospital ID"/>
            </columns>
        </TableView>

        <!-- Form for adding/updating blood request -->
        <VBox fx:id="formBox" layoutX="450.0" layoutY="440.0" spacing="10.0" alignment="CENTER" visible="false">
        
            <HBox spacing="10.0">
                <Label text="RequestID:"/>
                <TextField fx:id="requestIDField"/>
            </HBox>
             <HBox spacing="10.0">
                <Label text="Blood Type:"/>
                <TextField fx:id="bloodTypeField"/>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Quantity:"/>
                <TextField fx:id="quantityField"/>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Hospital ID:"/>
                <TextField fx:id="hospitalIDField"/>
            </HBox>

            <!-- Buttons for the form: separate submit for add and save for update -->
            <HBox spacing="10.0" alignment="CENTER">
                <!-- This button is for creating a new request -->
                <Button fx:id="submitRequestButton" text="Submit Request" onAction="#handleAdd" visible="false"/>
                <!-- This button is for saving changes when updating an existing record -->
                <Button fx:id="saveChangesButton" text="Save Changes" onAction="#handleSaveChanges" visible="false"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </HBox>
        </VBox>

        <!-- Action buttons -->
        <HBox layoutX="14.0" layoutY="450.0" spacing="20.0" alignment="CENTER">
            <Button fx:id="createButton" text="Add New Request" onAction="#handleCreate"/>
            <Button fx:id="updateButton" text="Update" onAction="#handleUpdate"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"/>
            <Button fx:id="displayAllButton" text="Display All" onAction="#handleDisplayAll"/>
        </HBox>
    </children>
</AnchorPane>
